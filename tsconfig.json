{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "outDir": "../../dist",
    "declaration": true,
    "declarationDir": "../../dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.svelte", "*.wc.svelte"]
    }
  },
  "include": [
    "lib/**/*.d.ts",
    "lib/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.svelte",
    "lib/**/*.wc.svelte",
    "index.ts",
    "packages/lib/svelte.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
